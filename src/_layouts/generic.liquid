  <head>
    <title>{{ siteTitle }}: {{ title }}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <meta name="generator" content="{{ eleventyinfo.generatorStr}}" />
    <meta name="author" content="John M. Wargo">
    {% if description %}
      <meta name="description" content="{{ description }}" />
    {% endif %}
    {% if categories.length > 0 %}
      <meta name="keywords" content="{% getKeywords categories %}">
    {% endif %}
    <link rel="manifest" href="/manifest.json">
    <link rel="stylesheet" href="{{ "/" | htmlBaseUrl }}assets/css/main.css" />
    <link rel="stylesheet" href="{{ "/" | htmlBaseUrl }}assets/css/scott.css" />
    <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet">
    {% include 'icons.html' %}
    {% include 'google-analytics.html' %}
  </head>

  <body class="is-preload">
    {% include 'header.html' %}
    <div class="wrapper">

      <section class="main">
        <section>
          <header>
            <h2>
              {{ title }}
            </h2>
          </header>
          {{ content }}
        </section>
      </section>

    </div>

    {% include 'footer.html' %}
    {% include 'page-scripts.html' %}
  </body>

</html>